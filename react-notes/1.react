//     console.log('Re-render List Component');
//     return(
//       <>
//         <div>{item}</div>
//       </>
//     )
// }

const List = React.memo(
  ({item}) =>{
    console.log('Re-render List Component');
    return(
      <>
        <div>{item}</div>
      </>
    )
  }
)

function App(){

  const [count, setCount] = useState(0);
  const items = ["Apple", "Orange", "Banana"];
  
  const reCount = () =>{
    setCount(count + 1);
  }
  return(
    <>
      <div>
        {
          items.map((item, index)=>(
            <List key={index} item={item} />
          ))
        }
        <br />
        {count}
        <br />
        <button onClick={reCount}>Count</button>
      </div>
    </>
  )
}

export default  App;

